<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse" role="navigation">
        <div class="container">
            <button type="button" class="btn btn-default navbar-btn navbar-inverse">@Html.ActionLink("Home", "Index", "Home")</button>
            <button type="button" class="btn btn-default navbar-btn navbar-inverse">@Html.ActionLink("Cadastro de Alunos", "Index", "Aluno")</button>
        </div>
    </nav>

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
